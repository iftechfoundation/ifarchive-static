
# admintool.log is generated by Apache (via admin.wsgi). It doesn't
# require a postrotate option because the admintool uses WatchedFileHandler.

/var/ifarchive/logs/admintool.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 660 www-data ifarchive
	su www-data ifarchive
}

# search.log works the same as admintool.log, but we keep less history.

/var/ifarchive/logs/search.log {
	daily
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 664 www-data ifarchive
	su www-data ifarchive
}

# web-upload.log is generated by the upload.py script.

/var/ifarchive/logs/web-upload.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 660 www-data ifarchive
	su www-data ifarchive
}
